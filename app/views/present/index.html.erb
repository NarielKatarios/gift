<h1>Все подарки</h1>

<%= link_to 'Новый подарок', new_present_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>

  <% @presents.each do |present| %>
    <tr>
      <td><%= present.title %></td>
      <td><%= present.body %></td>
      <td><%= link_to 'Show', present_path(present) %></td>
      <td><%= link_to 'Edit', edit_present_path(present) %></td>
      <td><%= link_to 'Destroy', present_path(present),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'На главную', root_path %>
