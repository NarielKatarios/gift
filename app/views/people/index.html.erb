<h1>Все одариваемые</h1>

<%= link_to 'Новый одариваемый', new_person_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>

  <% @people.each do |person| %>
    <tr>
      <td><%= person.title %></td>
      <td><%= person.body %></td>
      <td><%= link_to 'Show', person_path(person) %></td>
      <td><%= link_to 'Edit', edit_person_path(person) %></td>
      <td><%= link_to 'Destroy', person_path(person),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'На главную', root_path %>
